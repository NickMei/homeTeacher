<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/divider_1dp"
        android:showDividers="middle"
        android:padding="5dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="李爽"
                android:id="@+id/tran_record_name"
                android:textSize="14dp"
                android:layout_gravity="center_vertical"
                android:textColor="#000" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="待支付"
                android:id="@+id/tran_record_status"
                android:textSize="14dp"
                android:gravity="end"
                android:layout_gravity="center_vertical"
                android:textColor="#AAA" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/tran_record_user_pic"
                android:src="@drawable/personal_photo_icon_2" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="初中语文"
                        android:id="@+id/tran_record_course_name"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="189/小时"
                        android:id="@+id/tran_record_price_per_hour"
                        android:textSize="18dp"
                        android:gravity="end" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="老师上门"
                        android:id="@+id/tran_record_teaching_type"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="1小时"
                        android:id="@+id/tran_record_total_time"
                        android:textSize="18dp"
                        android:gravity="end" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:text="总价格：￥196"
                android:id="@+id/tran_record_total_price"
                android:textSize="14dp"
                android:gravity="center_vertical|end" />
        </LinearLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView><!-- From: file:/C:/Users/Nick/Desktop/homeTeacher/02_Development/01_android/01_working/pokerface/pokerface1_0/src/main/res/layout/card_view_transaction_record.xml -->