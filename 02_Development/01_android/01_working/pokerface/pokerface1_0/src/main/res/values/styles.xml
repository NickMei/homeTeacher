<resources>


    <style name="commentRatingBar" parent="Base.Widget.AppCompat.RatingBar">
        <item name="android:minHeight">10dp</item>
        <item name="android:maxHeight">10dp</item>
    </style>

    <style name="AppCompatSkyBlueLight" parent="@style/Theme.AppCompat.Light.NoActionBar" >
        <item name="colorAccent">@color/primaryColor</item>
        <item name="android:colorBackground">@color/background_material_light</item>
    </style>


    <!--textView-->
    <style name="textViewButton" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#FFF</item>
        <item name="android:background">@color/primaryTextColor</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="textViewLightButton" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#000</item>
        <item name="android:background">@color/lightWhite</item>
        <item name="android:gravity">center</item>
    </style>


</resources>
