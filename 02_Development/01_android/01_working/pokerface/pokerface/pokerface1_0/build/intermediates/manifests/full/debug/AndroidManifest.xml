<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kayluo.pokerface"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="21" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <android:uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <android:uses-permission android:name="android.permission.READ_CALL_LOG" />

    <!--
     To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user. This disconnect
     option is required to comply with the Google+ Sign-In developer policies
    -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <application
        android:name="com.kayluo.pokerface.core.AppManager"
        android:allowBackup="true"
        android:icon="@drawable/app_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name="com.kayluo.pokerface.UI.main.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.kayluo.pokerface.UI.RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="com.kayluo.pokerface.UI.TutorDetailActivity"
            android:label="@string/title_activity_tutor_detail"
            android:theme="@style/AppTheme.Toolbar" >
        </activity>
        <activity
            android:name="com.kayluo.pokerface.UI.LocationCityListViewActivity"
            android:label="@string/title_activity_location_list_view" >
        </activity>
        <activity
            android:name="com.kayluo.pokerface.UI.TutorRequestActivity"
            android:label="@string/title_activity_tutor_request" >
        </activity>
        <activity
            android:name="com.kayluo.pokerface.UI.user.LoginViewActivity"
            android:label="@string/title_activity_login_view"
            android:windowSoftInputMode="adjustResize|stateHidden" >
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.kayluo.pokerface.UI.LocationDistrictListViewActivity"
            android:label="@string/title_activity_location_district_list_view" >
        </activity>
        <activity
            android:name="com.kayluo.pokerface.UI.user.LocationProvinceListViewActivity"
            android:label="@string/title_activity_location_province_list_view" >
        </activity>
        <activity
            android:name="com.kayluo.pokerface.UI.user.UserDetailActivity"
            android:label="@string/title_activity_user_detail" >
        </activity>
        <activity
            android:name="com.kayluo.pokerface.UI.user.UserTransactionRecordActivity"
            android:label="@string/title_activity_user_transaction_record" >
        </activity>
        <activity
            android:name="com.kayluo.pokerface.UI.user.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
    </application>

</manifest>